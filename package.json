{
  "name": "@componentor/opfs-fs",
  "version": "1.1.2",
  "description": "OPFS-based FS implementation for isomorphic-git",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/opfs-worker-proxy.d.ts",
      "import": "./dist/opfs-worker-proxy.js"
    },
    "./worker-script": {
      "import": "./dist/opfs-worker.js"
    },
    "./hybrid": {
      "types": "./dist/opfs-hybrid.d.ts",
      "import": "./dist/opfs-hybrid.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/componentor/opfs-fs.git"
  },
  "author": "Componentor",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opfs",
    "fs",
    "isomorphic-git",
    "filesystem",
    "browser",
    "web",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/componentor/opfs-fs/issues"
  },
  "homepage": "https://github.com/componentor/opfs-fs#readme",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "happy-dom": "^20.0.10",
    "isomorphic-git": "^1.35.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
